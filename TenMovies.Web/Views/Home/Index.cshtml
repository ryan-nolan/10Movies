@model IEnumerable<TenMovies.Web.Models.MovieModels.MovieList>
@{
    ViewData["Title"] = "Home Page";
}

<form class="form-inline d-flex justify-content-center md-form form-sm" asp-action="Movies" method="get">
    <input class="form-control form-control-sm mr-3 w-75" type="text" placeholder="Search" name="searchTerm" id="searchTerm"
           aria-label="Search">
    <button class="border-0" style="background: none" type="submit">
        <i class="fas fa-search" aria-hidden="true"></i>
    </button>
</form>

@foreach (var l in Model)
{
    //Partial for ViewMovieList
    await Html.RenderPartialAsync("MoviePartials/_ViewMovieListPartial", l);
}
