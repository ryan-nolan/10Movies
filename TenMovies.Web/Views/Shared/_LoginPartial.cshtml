@using Microsoft.AspNetCore.Identity
@using TenMovies.Web.Models.Core.User

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="User" asp-action="Logout" method="get" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-controller="User" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li><a asp-controller="Account" asp-action="Register">Register</a></li>*@
        <li><a asp-controller="User" asp-action="Login">Log in</a></li>
    </ul>
}